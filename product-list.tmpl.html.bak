<table id="product-list" class="table table-bordered mt-3">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Available</th>
        </tr>
    </thead>
    <tbody>
        {{ range .Products }}
            {{ block "xproduct-list-element" . }}
            <tr class="table-primary {{ if not .Available }}opacity-75{{ end }} text-white ">
                <td>{{ .Name }}</td>
                <td>{{ .Price }}</td>
                <td>{{ .Available }}</td>
                {{ .Name }}: ${{ .Price }}
                <!--
